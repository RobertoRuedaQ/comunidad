<% if current_user %>
<div class="row">
	<div class="chart_agile">
		<div class="col-md-6">
			<h2>Usuarios del apartamento</h2>
			<div class="table-responsive">
				<table class="table table-striped b-t b-light">
					<thead>
						<tr>
						  <th>Nombre</th>
						  <th>Apellido</th>
						  <th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% current_user.apartment.users.all.each do |person| %>
						  <tr>
						    <td><%= person.name %></td>
						    <td><%= person.last_name %>
						  </tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>

	<div class="chart_agile">
		<div class="col-md-6">
				<h2>Niños</h2>
			<table class="table table-striped b-t b-light">
			  <thead>
			    <tr>
			      <th>Nombre</th>
			      <th>Apellido</th>
			      <th>Fecha de nacimiento</th>
			      <th>Género</th>

			      <th colspan="3"></th>
			    </tr>
			  </thead>

			  <tbody>
			    <% current_user.apartment.children.all.each do |child| %>
			      <tr>
			        <td><%= child.name %></td>
			        <td><%= child.last_name %></td>
			        <td><%= child.day_of_birth %></td>
			        <td><%= child.gender %></td>
			        <td><%= link_to 'Show', child %></td>
			        <td><%= link_to 'Edit', edit_child_path(child) %></td>
			        <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>
		</div>
	</div>
</div>
	
<div class="row">
	<div class="chart_agile">
		<div class="col-md-6">
			<h2>Mascotas</h2>
				<table class="table">
		  		<thead>
				    <tr>
				      <th>Raza</th>
				      <th>Nombre</th>
				      <th colspan="3"></th>
				    </tr>
			  	</thead>

			  	<tbody>
			    <% current_user.apartment.pets.each do |pet| %>
			      <tr>
			        <td><%= pet.breed %></td>
			        <td><%= pet.name %></td>
			        <td><%= link_to 'Mostrar', pet %></td>
			        <td><%= link_to 'Editar', edit_pet_path(pet) %></td>
			        <td><%= link_to 'Borrar', pet, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
			      </tr>
			    	<% end %>
			  	</tbody>
				</table>
		</div>
	</div>

	<div class="chart_agile">
		<div class="col-md-6">
			<h2>Vehiculos</h2> 
				<table class="table table-striped b-t b-light">
				  <thead>
				    <tr>
				      <th>Tipo</th>
				      <th>Placa</th>
				      <th>Marca</th>
				      <th>Apartamento</th>
				      <th colspan="3"></th>
				    </tr>
				  </thead>
					<tbody>
				    <% current_user.apartment.vehicles.each do |vehicle| %>
				      <tr>
				        <td><%= vehicle.category %></td>
				        <td><%= vehicle.plate %></td>
				        <td><%= vehicle.brand %></td>
				        <td><%= link_to 'Mostar', vehicle %></td>
				        <td><%= link_to 'Editar', edit_vehicle_path(vehicle) %></td>
				        <td><%= link_to 'Borrar', vehicle, method: :delete, data: { confirm: 'Estas seguro' } %></td>
				      </tr>
				    <% end %>
				  </tbody>
				</table>
		</div>
	</div>
</div>


<div class="row">
	<div class="chart_agile">
		<div class="col-md-6">
			<h2>Servicio doméstico</h2>
			<table class="table table-striped b-t b-light">
			  <thead>
			    <tr>
			      <th>Nombre</th>
			      <th>Apellido</th>
			      <th>ARL</th>
			      <th colspan="3"></th>
			    </tr>
			  </thead>
				<tbody>
			    <% current_user.apartment.werehouses.each do |werehouse|%>
			      <tr>
			        <td><%= werehouse.name %></td>
			        <td><%= werehouse.last_name %></td>
			        <td><%= werehouse.ARL %></td>
			        <td><%= link_to 'Mostar', vehicle %></td>
			        <td><%= link_to 'Editar', edit_vehicle_path(vehicle) %></td>
			        <td><%= link_to 'Borrar', vehicle, method: :delete, data: { confirm: 'Estas seguro' } %></td>
			      </tr>
			    <% end %>
			  </tbody>
			</table> 
		</div>

		<div class="col-md-6">
			<%= link_to new_child_path, class: "btn btn-default btn-sm"  do%>
				<i class="fa fa-child"></i> Nuevo niño
			<%end%>
			<%= link_to new_werehouse_path, class: "btn btn-default btn-sm" do%>
				<i class="fa fa-female"></i> Nueva Empleada
			<%end %>
			<%= link_to new_pet_path, class: "btn btn-default btn-sm" do%>
				<i class="fa fa-paw"></i> Nueva mascota
			<%end %>
			<%= link_to new_vehicle_path, class: "btn btn-default btn-sm" do%>
				<i class="fa fa-car"></i> Nuevo vehículo
			<%end %>
		</div>
	</div>
</div>
	




<%end %>