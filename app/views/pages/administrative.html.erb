<div class="row">
	<div class="col-md-6">
		<h2>Areas comunes</h2>
		<table class="table">
    <thead>
      <tr>
        <th>Lugar</th>
        <th>Fecha</th>
        <th>Hora de incio</th>
        <th>Hora final</th>
        <th>Usuario</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @common_areas.each do |common_area| %>
        <tr>
          <td><%= common_area.title %></td>
          <td><%= common_area.date %></td>
          <td><%= common_area.start_hour.hour %>:<%= common_area.start_hour.min %></td>
          <td><%= common_area.end_hour.hour %>:<%= common_area.end_hour.min %></td>
          <td><%= common_area.user.name %> <%= common_area.user.last_name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
	</div>
	<div class="col-md-6">
		<h2>Quejas y sugerencias</h2>
		<table class="table">
    <thead>
      <tr>
        <th>Apartmento</th>
        <th>Tipo</th>
        <th>Descripci√≥n</th>
        <th>Respuesta</th>
        <th>Resuelto?</th>
        <th>Imagen</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @complaints.each do |complaint| %>
          <tr>
            <td><%= complaint.apartment.apto %></td>
            <td><%= complaint.category %></td>
            <td><%= complaint.description %></td>
            <td><%= complaint.answer %></td>
            <td><%= complaint.solved %></td>
            <td><%= image_tag(complaint.imagen_url, :width => 200, :height => 200) if complaint.imagen.present? %></td>
            <td><%= link_to 'editar', edit_complaint_path(complaint)%></td>
          </tr>
      <% end %>
    </tbody>
  </table>
	</div>
</div>


<div class="row">
	<div class="col-md-6">
		<table class="table">
	    <thead>
	      <tr>
	        <th>nombre</th>
	        <th>apellido</th>
	        <th>activo</th>
	      </tr>
	    </thead>
	    <tbody>
	      <% @users.each do |user| %>
	          <tr>
	            <td><%= user.name %></td>
	            <td><%= user.last_name %></td>
	            <td><<%= user.active %></td>
	          </tr>
	      <% end %>
	    </tbody>
  	</table>
	</div>
	<div class="col-md-6">
		<div id="calendar"></div>
	</div>
</div>
