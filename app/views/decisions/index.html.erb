<h1>Votaciones</h1>
<p id="notice"><%= notice %></p>
<% @decisions.each do |decision| %>
  <div class="container">
    <div class="jumbotron">
      <table class="table">
        <thead>
          <tr>
            <td>tittle  </td>
            <td>description </td>
            <td>A favor</td>
            <td>En contra</td>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= decision.tittle  %></td>
              <td><%= decision.description %></td>
              <td><%= decision.get_upvotes.size %> </td>
              <td><%= decision.get_downvotes.size %></td>
            </tr>
        </tbody> 
      </table>

    <div class="row">
      <div class="col-sm-12 col-xs-12" id="buttons">
        <%= link_to like_decision_path(decision),class: "btn btn-success", method: :put do %>
          A favor         
        <% end %>
        <%= link_to dislike_decision_path(decision), class: "btn btn-danger", method: :put do %>
          En contra 
        <% end %>  
      </div>
    </div>
    <div>
      <div>
      <div class="progress">
        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style='width:<%="#{decision.positive_coefficient}"%>%'>
        </div>
      </div>
        <div class="progress">
          <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style='width:<%="#{decision.negative_coefficient}"%>%'>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script>
  $(document).ready(function(){
    $("a .btn").on("click", function(){
      $(".col-sm-12 .col-xs-12").hide()
    })
  })
</script>





