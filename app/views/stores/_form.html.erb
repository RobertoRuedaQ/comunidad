<%= form_with(model: store, local: true) do |form| %>
  <% if store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% store.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :store_name %>
  </div>

  <div class="field">
    <%= form.label :image, t('Imagen') %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, id: :store_user_id, value: current_user.id %>
  </div>

  <div class="actions">
      <%= image_submit_tag("btn-crear.png") %>
    </div>
<% end %>
