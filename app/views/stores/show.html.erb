<div class="row">
	<%= image_tag(@store.image_url, :width => 400, :height => 300) if @store.image.present? %>
	<div class="col-md-6">
    <% @store.products.each do |product| %>
    <%= image_tag(product.image_url, :width => 200, :height => 200) if product.image.present? %>
      <h4><%= product.name %></small></h4>
  </div>
  <div class="col-md-6">
      <%= form_for :order_item, url: order_items_path, remote: true do |f| %>
        <h4 class="text-right">Valor unidad: <span style="color: green"><%= number_to_currency product.price %></span></h4>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Pedir", class: "btn btn-primary" %>
          </div>
        </div>    
      <% end %>
  </div>
  <%end%>
</div>
       
