<div class="row">
  <div class="col-md-6">
    <h1>Trabajadores</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Foto</th>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Arl</th>
          <th>Funci√≥n</th>
          <th>Memo</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @workers.each do |worker| %>
          <tr>
            <td><%= image_tag(worker.imagen_url, :width => 80, :height => 80) if worker.imagen.present? %></td>
            <td><%= worker.name %></td>
            <td><%= worker.last_name %></td>
            <td><%= worker.ARL %></td>
            <td><%= worker.role %></td>
            <td><%= worker.memo %></td>
            <td><%= link_to 'Mostrar', worker %></td>
            <td><%= link_to 'Editar', edit_worker_path(worker) %></td>
            <td><%= link_to 'Borrar', worker, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to new_worker_path  do%>
      <%=image_tag("btn-crear.png")  %>
    <%end %>
  </div>
  <div class="col-md-6"></div>
</div>
<br>


