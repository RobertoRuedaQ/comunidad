<p id="notice"><%= notice %></p>

<h1>Vehículos</h1>

<table>
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Placa</th>
      <th>Marca</th>
      <th>Apartamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.category %></td>
        <td><%= vehicle.plate %></td>
        <td><%= vehicle.brand %></td>
        <td><%= vehicle.apartment.apto %></td>
        <td><%= link_to 'Mostar', vehicle %></td>
        <td><%= link_to 'Editar', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Borrar', vehicle, method: :delete, data: { confirm: 'Estas seguro' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crea un nuevo vehículo', new_vehicle_path %>
