<div class="row">
	<div class="col-md-6">
		<table class="table">
	    <thead>
	      <tr>
	        <th>nombre</th>
	        <th>apellido</th>
          <th>Apartamento</th>
	        <th>activo</th>
	      </tr>
	    </thead>
	    <tbody>
	      <% @users.each do |user| %>
	          <tr>
	            <td><%= user.name %></td>
	            <td><%= user.last_name %></td>
	            <td><%= user.apartment.apto %></td>
	            <% if user.active == false %>
              <td>pendiente por activaci√≥n</td>
              <%else %>
              <td> <span class="fa fa-check"></span></td>
              <td><%=button_to 'Activar', user_path(user), method: :patch%></td>
              <td><%=button_to 'Borrar', user_path(user), method: :delete%></td>
              <%end%>
	          </tr>
	      <% end %>
	    </tbody>
  	</table>
	</div>
</div>