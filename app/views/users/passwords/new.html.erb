<h2>Olvidaste la contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, t('Correo electrónico') %><br />
    <%= f.email_field :email, autofocus: true , class: "form-control ggg"%>
  </div>

  <div class="actions">
    <%= f.submit "Enviame instrucciones para recuperar la contraseña" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
