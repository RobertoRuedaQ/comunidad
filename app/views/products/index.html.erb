<h3 class="text-center">Promociones para ti</h3>
<% @stores.each do |store| %>
<div class="row">
	<div class="col-md-4">
   <%= image_tag(store.image_url, :width => 300, :height => 150) if store.image.present? %>
	</div>
	<div class="col-md-8">
    <%store.products.each do |product| %>
    	<%= render "product_row", product: product, order_item: @order_item%>
    <%end %>
   <%end %>	
	</div>
</div>

